{
  "name": "mbon-dash-2025",
  "version": "1.0.0",
  "description": "Interactive marine biodiversity dashboard for OSA MBON project",
  "scripts": {
    "download-data": "uv run scripts/download_raw_data.py",
    "build-data": "uv run scripts/pipeline/run_full_pipeline.py",
    "build-data-legacy": "uv run scripts/legacy/process_data.py",
    "build-analysis": "uv run scripts/analysis/pca_analysis.py && uv run scripts/analysis/correlation_analysis.py",
    "validate-data": "uv run scripts/legacy/validate_data.py",
    "data-stats": "uv run scripts/legacy/data_stats.py",
    "dev": "next dev",
    "dev:fresh": "npm run build-data && next dev",
    "dev:clean": "rm -rf .next && next dev",
    "build": "next build",
    "build:clean": "rm -rf .next && npm run build-data && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "pipeline:step1": "uv run scripts/pipeline/steps/1_process_raw_data.py",
    "pipeline:step2": "uv run scripts/pipeline/steps/2_align_temporal_windows.py", 
    "pipeline:step3": "uv run scripts/pipeline/steps/3_join_datasets.py",
    "pipeline:step4": "uv run scripts/pipeline/steps/4_handle_missing_data.py",
    "pipeline:step5": "uv run scripts/pipeline/steps/5_run_pca_analysis.py",
    "pipeline:step6": "uv run scripts/pipeline/steps/6_prepare_dashboard_data.py"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@observablehq/plot": "^0.6.17",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "mapbox-gl": "^1.13.3",
    "next": "^15.4.5",
    "papaparse": "^5.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/file-saver": "^2.0.7",
    "@types/mapbox-gl": "^3.4.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.21",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  }
}
