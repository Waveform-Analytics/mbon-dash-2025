{
  "name": "mbon-dash-2025",
  "version": "1.0.0",
  "description": "Interactive marine biodiversity dashboard for OSA MBON project",
  "scripts": {
    "sync-data": "uv run scripts/data_management/sync_raw_data.py",
    "sync-data:check": "uv run scripts/data_management/sync_raw_data.py --check-only",
    "sync-data:indices": "uv run scripts/data_management/sync_raw_data.py --indices-only",
    "sync-data:force": "uv run scripts/data_management/sync_raw_data.py --force",
    "generate-manifest": "uv run scripts/data_management/generate_manifest.py",
    "upload-cdn": "uv run scripts/data_management/upload_to_cdn.py",
    "download-data": "uv run scripts/data_management/download_raw_data.py",
    "process-data": "uv run scripts/dashboard_prep/process_excel_to_json.py && uv run scripts/utils/validate_processed_data.py",
    "validate-only": "uv run scripts/utils/validate_processed_data.py",
    "validate-data": "uv run scripts/utils/validate_data.py",
    "data-stats": "uv run scripts/utils/data_statistics.py",
    "check-freshness": "uv run scripts/utils/check_data_freshness.py",
    "build-notebook-docs": "uv run scripts/build_notebook_docs.py",
    "dev": "next dev",
    "dev:fresh": "npm run process-data && next dev",
    "dev:clean": "rm -rf .next && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test:validation": "uv run pytest tests/test_validation_script.py -v",
    "test:excel-processor": "uv run pytest tests/test_excel_processor.py -v", 
    "test:data-loader": "uv run pytest tests/test_data_loader.py -v",
    "test:data-prep": "uv run pytest tests/test_data_prep.py -v",
    "test:all": "uv run pytest tests/ -v",
    "test:coverage": "uv run pytest tests/ --cov=mbon_analysis --cov-report=term-missing --cov-report=html",
    "test:unit": "uv run pytest tests/ -m 'not slow and not integration' -v",
    "test:integration": "uv run pytest tests/ -m integration -v",
    "test:comprehensive": "uv run python test_runner.py",
    "dashboard:all": "npm run sync-data && npm run process-data"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@observablehq/plot": "^0.6.17",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "mapbox-gl": "^1.13.3",
    "next": "^15.4.5",
    "papaparse": "^5.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/file-saver": "^2.0.7",
    "@types/mapbox-gl": "^3.4.1",
    "@types/node": "^24.1.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.21",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  }
}
